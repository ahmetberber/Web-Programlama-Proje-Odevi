@model IEnumerable<HairSalonManagement.Models.Employee>

<h2>Çalışanlar</h2>
<a asp-action="Create" class="btn btn-primary">Yeni Çalışan Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Uzmanlık</th>
            <th>Çalışma Saatleri</th>
            <th>Hizmetler</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Specialization</td>
                <td>@employee.StartTime - @employee.EndTime</td>
                <td>
                    @foreach (var service in employee.Services)
                    {
                        <span>@service.Name</span><br />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
