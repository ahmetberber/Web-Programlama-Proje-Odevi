@model IEnumerable<HairSalonManagement.Models.Employee>

<h1>Çalışanlar</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Yeni Çalışan Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Uzmanlık</th>
            <th>Müsaitlik</th>
            <th>Salon</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Expertise</td>
                <td>@(item.IsAvailable ? "Müsait" : "Müsait Değil")</td>
                <td>@item.Salon?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
