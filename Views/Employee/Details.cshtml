@model HairSalonManagement.Models.Employee

<h2>Çalışan Detayları</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text"><strong>Uzmanlık:</strong> @Model.Expertise</p>
        <p class="card-text"><strong>Müsaitlik:</strong> @(Model.IsAvailable ? "Müsait" : "Müsait Değil")</p>
        <p class="card-text"><strong>Salon:</strong> @Model.Salon?.Name</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Geri</a>
