@model HairSalonManagement.Models.Employee

<h2>Çalışan Detayları</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Ad:</strong> @Model.Name</p>
        <p><strong>Uzmanlık:</strong> @Model.Specialization</p>
        <p><strong>Çalışma Saatleri:</strong> @Model.StartTime - @Model.EndTime</p>
        <p><strong>Hizmetler:</strong></p>
        <ul>
            @foreach (var service in Model.Services)
            {
                <li>@service.Name</li>
            }
        </ul>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">Geri</a>
