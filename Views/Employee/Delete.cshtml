@model HairSalonManagement.Models.Employee

<h2>Çalışanı Sil</h2>

<div class="alert alert-danger">
    <h4>Bu çalışanı silmek istediğinize emin misiniz?</h4>
</div>

<div>
    <h5>@Model.Name</h5>
    <p><strong>Uzmanlık:</strong> @Model.Expertise</p>
    <p><strong>Müsaitlik:</strong> @(Model.IsAvailable ? "Müsait" : "Müsait Değil")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
