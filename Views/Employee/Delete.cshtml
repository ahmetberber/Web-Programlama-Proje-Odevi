@model HairSalonManagement.Models.Employee

<h2>Çalışanı Sil</h2>

<div class="alert alert-danger">
    <h4>Bu çalışanı silmek istediğinize emin misiniz?</h4>
</div>

<div class="card">
    <div class="card-body">
        <p><strong>Ad:</strong> @Model.Name</p>
        <p><strong>Çalışma Saatleri:</strong> @Model.StartTime - @Model.EndTime</p>
        <p><strong>Hizmetler:</strong></p>
        <ul>
            @foreach (var service in Model.EmployeeServices)
            {
                <li>@service.Service.Name</li>
            }
        </ul>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
