@model HairSalonManagement.Models.Employee

<h2>Yeni Çalışan Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Expertise" class="control-label"></label>
        <input asp-for="Expertise" class="form-control" />
        <span asp-validation-for="Expertise" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsAvailable" class="control-label"></label>
        <select asp-for="IsAvailable" class="form-control">
            <option value="true">Müsait</option>
            <option value="false">Müsait Değil</option>
        </select>
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SalonId" class="control-label">Salon</label>
        <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId">
            <option value="">Salon Seç</option>
        </select>
        <span asp-validation-for="SalonId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
