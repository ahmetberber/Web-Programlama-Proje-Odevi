@model IEnumerable<HairSalonManagement.Models.Service>

<h2>@ViewBag.SalonName - Hizmetler</h2>
<a asp-action="Index" asp-controller="Salon" class="btn btn-secondary">Salonlar</a>
<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Ücret</th>
            <th>Süre (dakika)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Price.ToString("C")</td>
                <td>@service.Duration dakika</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-route-salonId="@ViewBag.SalonId" class="btn btn-primary">Yeni Hizmet Ekle</a>
