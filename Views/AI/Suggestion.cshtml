<h2>Saç Modeli Önerisi Al</h2>

<form asp-action="Suggestion" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="photo">Bir fotoğraf yükleyin:</label>
        <input type="file" id="photo" name="photo" class="form-control" accept="image/*" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Öneri Al</button>
</form>

<div class="mt-4">
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }
    else if (ViewBag.Suggestion != null)
    {
        <div class="alert alert-success">
            <h4>Önerilen Saç Modeli:</h4>
            <p>@ViewBag.Suggestion</p>
        </div>
    }
</div>
