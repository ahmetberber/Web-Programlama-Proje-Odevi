@model IEnumerable<HairSalonManagement.Models.Appointment>

<h2>Randevular</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Yeni Randevu Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Hizmet</th>
            <th>Tarih ve Saat</th>
            <th>Süre</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Service</td>
                <td>@appointment.Date.ToString("g")</td>
                <td>@appointment.Duration dakika</td>
                <td>
                    <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-info">Detaylar</a>
                    <a asp-action="Delete" asp-route-id="@appointment.Id" class="btn btn-danger">Sil</a>
                    <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-warning">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
