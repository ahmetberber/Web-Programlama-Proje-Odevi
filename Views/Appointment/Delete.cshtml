@model HairSalonManagement.Models.Appointment

<h2>Randevuyu Sil</h2>

<div class="alert alert-danger">
    <h4>Bu randevuyu silmek istediğinize emin misiniz?</h4>
</div>

<div>
    <p><strong>Salon:</strong> @Model.Salon.Name</p>
    <p><strong>Hizmet:</strong> @Model.Service.Name</p>
    <p><strong>Çalışan:</strong> @Model.Employee.Name</p>
    <p><strong>Tarih:</strong> @Model.Date.ToString("g")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
