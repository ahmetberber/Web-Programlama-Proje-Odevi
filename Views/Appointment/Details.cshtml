@model HairSalonManagement.Models.Appointment

<h2>Randevu Detayları</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Service</h4>
        <p class="card-text"><strong>Randevu Tarihi:</strong> @Model.AppointmentDate.ToString("dd/MM/yyyy HH:mm")</p>
        <p class="card-text"><strong>Ücret:</strong> @Model.Price.ToString("C")</p>
        <p class="card-text"><strong>Çalışan:</strong> @Model.Employee?.Name</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Geri</a>
