@model HairSalonManagement.Models.Salon

<h2>Yeni Salon Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkingHours" class="control-label"></label>
        <input asp-for="WorkingHours" class="form-control" placeholder="09:00 - 18:00" />
        <span asp-validation-for="WorkingHours" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
