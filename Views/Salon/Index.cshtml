@model IEnumerable<HairSalonManagement.Models.Salon>

<h2>Salonlar</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Yeni Salon Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Adres</th>
            <th>Açılış Saati</th>
            <th>Kapanış Saati</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var salon in Model)
        {
            <tr>
                <td>@salon.Name</td>
                <td>@salon.Address</td>
                <td>@salon.OpeningTime</td>
                <td>@salon.ClosingTime</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@salon.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@salon.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>