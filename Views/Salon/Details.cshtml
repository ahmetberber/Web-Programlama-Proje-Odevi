@model HairSalonManagement.Models.Salon

<h2>Salon Detayları</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text"><strong>Adres:</strong> @Model.Address</p>
        <p class="card-text"><strong>Açılış Saati:</strong> @Model.OpeningTime</p>
        <p class="card-text"><strong>Kapanış Saati:</strong> @Model.ClosingTime</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Geri</a>
